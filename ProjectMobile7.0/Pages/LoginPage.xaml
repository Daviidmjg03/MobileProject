<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMobile7._0.Pages.LoginPage"
             Title="Login Page">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Image Source="login.png" WidthRequest="150" HeightRequest="150" HorizontalOptions="Center" />
        <Entry x:Name="EmailEntry" Placeholder="Enter your email" Keyboard="Email" Margin="0,10" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" Margin="0,10" />

        <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
            <Switch x:Name="RememberMeSwitch" />
            <Label Text="Remember me" VerticalOptions="Center" FontSize="14" />
        </HorizontalStackLayout>

        <Button Text="Login" Clicked="Button_Clicked" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="5" Margin="0,20" />
        <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" FontSize="14" VerticalOptions="Center" Margin="0,10" />

    </VerticalStackLayout>
</ContentPage>
