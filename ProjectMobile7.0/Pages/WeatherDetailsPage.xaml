<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMobile7._0.Pages.WeatherDetailsPage"
             Title="Weather Details">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label x:Name="cityNameLabel" FontSize="24" HorizontalOptions="Center" />
            <Label x:Name="temperatureLabel" FontSize="18" HorizontalOptions="Center" />
            <Label x:Name="weatherDescriptionLabel" FontSize="18" HorizontalOptions="Center" />
            <Label x:Name="humidityLabel" FontSize="16" HorizontalOptions="Center" />
            <Label x:Name="pressureLabel" FontSize="16" HorizontalOptions="Center" />
            <Label x:Name="windSpeedLabel" FontSize="16" HorizontalOptions="Center" />
            <Label x:Name="windGustLabel" FontSize="16" HorizontalOptions="Center" />
            <Label x:Name="windDirectionLabel" FontSize="16" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
